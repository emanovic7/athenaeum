<% if @user.books.count == 0 %>
  <%= "Your library is empty, add books here"%>
  <p><a href='/books/new'>Add New Book</a></p>
<% elsif @user.books.count == 1 %>
  <%= "There is "%><%=@user.books.count%><%=" book in your library"%>
<%elsif%>
  <%= "There are "%><%=@user.books.count%><%=" books in your library"%>
<%end%>



<% @user.books.all.each do |book| %>
  <ul>
    <li>
      Title: <a href="books/<%=book.slug%>"><%= book.name %></a></br>
      Author: <a href="authors/<%=book.author.id%>"><%= book.author.name %></a></br>
      <p>Subject(s):
      <% book.subjects.each do |subject| %>
        <a href="/subjects/<%= subject.slug %>"><%= subject.name %></a>
      <% end %>
      </p>
    </li>
  </ul>
<% end %>

<p><a href='/home'>Home</a></p>
